<p id="notice"></p>
<% if @user.errors.any? %>
<%= @user.errors.count %>errors prohibited this user from being saved:
<ul>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 mx-auto">
  <h2>User info</h2>

  <%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
<br>
  <label for="inputImage">Image</label>
  <br>
  <%= f.file_field :profile_image, accept: "image/*" %>
<br>
  <label for="inputIntroduction">Introduction</label>
  <br>
  <%= f.text_area :introduction, placeholder: "Introduction" %>
  <br>
  <%= f.submit "Update User" %>
  <% end %>
</div>